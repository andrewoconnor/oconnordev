<%= @site %>:80, <%= @site %>:443 {
    root <%= @wwwroot %>
 
    redir 301 {
      if {scheme} not https
      / https://{host}{uri}
    }

    tls /etc/ssl/local_certs/<%= @site %>.crt /etc/ssl/local_certs/private/<%= @site %>.key

    log stdout 
    errors stderr
}

www.<%= @site %>:80, www.<%= @site %>:443 {
    redir https://<%= @site %>{uri}
}

http://*/.well-known {
    root <%= @wwwroot %>/.well-known
}
