calusari.net:80, calusari.net:443 {
    root /soft/calusari
 
    redir 301 {
      if {scheme} not https
      / https://{host}{uri}
    }

    tls /etc/ssl/local_certs/calusari.net.crt /etc/ssl/local_certs/private/calusari.net.key

    log stdout 
    errors stderr
}

www.calusari.net:80, www.calusari.net:443 {
    redir https://calusari.net{uri}
}

http://*/.well-known {
    root /soft/calusari/.well-known
}
