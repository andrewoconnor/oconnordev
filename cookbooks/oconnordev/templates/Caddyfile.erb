http://<%= @site %>/.well-known/*, http://www.<%= @site %>/.well-known/* {
    file_server {
        root <%= @wwwroot %>
    }
}

www.<%= @site %> {
    tls <%= @ssl_cert %> <%= @ssl_key %>
}

<%= @site %> {
    tls <%= @ssl_cert %> <%= @ssl_key %>
    redir https://www.<%= @site %>{uri} permanent
}